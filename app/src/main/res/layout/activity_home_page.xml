
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    tools:context=".Home_page"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#fece2f"/>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#f2f2f2"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"/>

    <!-- Your other layout content here -->



    <!-- Top menu and search bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:src="@drawable/menu"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/carlog" />
    </LinearLayout>

    <!-- Image view and description -->
    <androidx.cardview.widget.CardView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:elevation="12dp"
        app:cardCornerRadius="40dp">


        <ImageView
            android:id="@+id/car_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/car_image" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="#fece2f"
        android:elevation="12dp"
        app:cardCornerRadius="40dp">


        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#f2f2f2"
            android:fontFamily="@font/bungee"
            android:padding="10dp"
            android:text="Find Your New Car Here and Parts of it at our Exclusive sale!"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="#fece2f"
        android:elevation="12dp"
        app:cardCornerRadius="40dp">


        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:background="#f2f2f2"
            android:padding="20dp"
            android:text="Discover our wide range of cars and take advantage of our exclusive sales!"

            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <!-- Bottom menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/cars"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/car" />

        <ImageView
            android:id="@+id/spare_parts"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/spare_parts" />

        <ImageView
            android:id="@+id/car_service"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/car_service" />

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/profile_user" />
    </LinearLayout>
</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>