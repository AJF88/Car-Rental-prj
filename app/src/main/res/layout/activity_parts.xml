<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".parts"
    android:padding="16dp"
    android:background="#f2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Text -->
        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover a wide variety of Parts here"
            android:textSize="18sp"
            android:fontFamily="@font/bungee"
            android:textColor="#000"
            android:paddingBottom="16dp"
            android:gravity="center" />

        <!-- First row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/part1" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Engine Oil"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lubricates and cools engine components, ensuring smooth operation."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price: PKR 1,500 - 3,000"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/part2" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Car Filters"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remove impurities from air, fuel, oil and also enhancing engine power and performance."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price: PKR 800 - 2,000"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Second row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Card 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/part3" />

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LED Lights"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provide bright, energy-efficient lighting for improved visibility and aesthetics."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/price3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price: PKR 1,200 - 2,500"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/part4" />

                    <TextView
                        android:id="@+id/name4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spark Plugs"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ignites the air-fuel mixture in the engine's chamber, enabling performance."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/price4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price: PKR 400 - 1,200"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Third row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Card 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/part5" />

                    <TextView
                        android:id="@+id/name5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Suspension Kit"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enhances vehicle handling and comfort by absorbing shocks and maintaining tire contact with the road."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/price5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price: PKR 5,000 - 10,000"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 6 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/part6" />

                    <TextView
                        android:id="@+id/name6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Engine Parts"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Various components like pistons, valves, and crankshaft, crucial for the engine's function and efficiency."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/price6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price: PKR 3,000 - 8,000"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
