<!-- activity_car_details.xml -->


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/car_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/carlog" />

    <TextView
        android:id="@+id/car_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_image"
        android:gravity="center"
        android:textSize="24sp"
        android:text="Car Name"
        android:textColor="#000"
        android:padding="16dp" />

    <TextView
        android:id="@+id/car_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_name"
        android:padding="16dp"
        android:text="Car Description"
        android:textSize="16sp"
        android:textColor="#333" />

    <Button
        android:id="@+id/buy_car_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_description"
        android:text="Buy a Car"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/whatsapp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_car_button"
        android:text="Contact via WhatsApp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:layout_margin="16dp" />
    </LinearLayout>
</ScrollView>
