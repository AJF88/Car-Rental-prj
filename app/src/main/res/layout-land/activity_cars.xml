<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".cars"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header Text -->
        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover a wide variety of Cars here"
            android:textSize="18sp"
            android:fontFamily="@font/bungee"
            android:textColor="#000"
            android:paddingBottom="16dp"
            android:gravity="center" />

        <!-- First row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Car 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onCardClick">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car1" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rolls Royce"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Luxurious epitome of automotive elegance and unparalleled craftsmanship."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Car 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onCardClick">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car2" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Audi Etron gt"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cutting-edge electric vehicle with futuristic design and advanced technology."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Car 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onCardClick">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car3" />

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BMW"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Iconic blend of performance, innovation, and driving pleasure."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Second row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Car 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onCardClick">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car4" />

                    <TextView
                        android:id="@+id/name4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KIA"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reliable and stylish vehicles known for affordability and modern features."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Car 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onCardClick">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car5" />

                    <TextView
                        android:id="@+id/name5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mercedes-Benz"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Synonymous with luxury, innovation, and automotive sophistication."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Car 6 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onCardClick">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car6" />

                    <TextView
                        android:id="@+id/name6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toyota Corolla"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/description6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reliable compact car celebrated for its efficiency and practicality."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
